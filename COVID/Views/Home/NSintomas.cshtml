    function validateForm() {

        var _temperatura = document.getElementById("temperatura").value;

        if (_temperatura < 35 || _temperatura > 45) {
            document.getElementById("alertaTemperatura").style.display = 'block';
            return false;

        }
    }
    function checkTemperaturaSuperior() {
        
        var _temperatura = document.getElementById("temperatura").value;

        if (_temperatura > 37.5) {
            document.getElementById("1").checked = 'true';
        } else {
